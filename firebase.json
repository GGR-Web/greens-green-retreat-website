{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "host": "127.0.0.1",
      "port": 8081
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "ui": {
        "enabled": true,
        "host": "127.0.0.1",
        "port": 4001
    }
  }
}